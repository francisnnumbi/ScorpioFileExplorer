<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_height="match_parent"
	android:layout_width="match_parent"
	android:orientation="vertical">

	<android.support.v7.widget.CardView
		android:id="@+id/recycler_modelandroid.support.v7.widget.CardView"
		app:cardCornerRadius="1dp"
		app:contentPadding="1dp"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:orientation="horizontal">

			<ImageView
				android:id="@+id/recycler_modelImageView"
				android:layout_height="52dp"
				android:layout_width="52dp"
				android:src="@drawable/ic_launcher"/>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical">

				<TextView
					android:id="@+id/recycler_modelTextView1"
					android:layout_height="wrap_content"
					android:text="filename.txt"
					android:layout_width="match_parent"/>

				<RelativeLayout
					android:layout_height="wrap_content"
					android:layout_width="wrap_content">

					<TextView
						android:layout_height="wrap_content"
						android:text="01/01/2017"
						android:layout_width="wrap_content"
						android:layout_toLeftOf="@+id/recycler_modelTextView3"
						android:id="@+id/recycler_modelTextView2"
						android:layout_alignParentLeft="true"/>

					<TextView
						android:id="@+id/recycler_modelTextView3"
						android:layout_height="wrap_content"
						android:text="0 B"
						android:layout_width="wrap_content"
						android:layout_alignParentRight="true"/>

				</RelativeLayout>

			</LinearLayout>

		</LinearLayout>

	</android.support.v7.widget.CardView>

</LinearLayout>

